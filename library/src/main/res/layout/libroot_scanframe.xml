<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <com.uuzuche.lib_zxing.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:inner_width="@dimen/libroot_scan_framewidth"
            app:inner_height="@dimen/libroot_scan_frameheight"
            app:inner_corner_color="@color/libroot_scan_line"
            app:inner_corner_length="@dimen/libroot_scan_cornerlinelength"
            app:inner_corner_width="@dimen/libroot_scan_cornerlinewidth"
            app:inner_scan_speed="15"
            app:inner_scan_iscircle="false" />
    </LinearLayout>

</FrameLayout>